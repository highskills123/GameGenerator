# AI Provider: "ollama" (default, free) or "openai"
AIBASE_PROVIDER=ollama

# Ollama settings (used when AIBASE_PROVIDER=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5-coder:7b

# OpenAI settings (only required when AIBASE_PROVIDER=openai)
# OPENAI_API_KEY=your_openai_api_key_here

# ngrok tunnel (optional â€” only needed when using --ngrok flag)
# Get a free authtoken at https://dashboard.ngrok.com/get-started/your-authtoken
# Without a token ngrok still works but sessions are limited to 2 hours.
# NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# Optional: For Discord bot
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Optional: API server URL (if running on different host)
AIBASE_API_URL=http://localhost:5000/api/translate
